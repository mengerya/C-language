
#include<stdio.h>
#include<windows.h>
#include<stdlib.h>
#include<assert.h>


int my_strlen(const char* str)
{
	int count = 0;
	assert(str);
	while(*str != '/0')
	{
		count++;
		str++;
	}
	return count;
}
void reverse_string(char arr[])
{
	int len = my_strlen(arr);
	char tem = arr[0];
	arr[0] = arr[len-1];
	arr[len-1] = '\0';
	if(my_strlen(arr+1)>1)
	{
		reverse(arr+1);
	}
	arr[len-1] = tem;
}


int main()
{

	char arr[] ="abcdef";
	reverse_string(arr);
	printf("逆序后的数组为：%s\n",arr);
	  
	system("pause");
	return 0;
}
